[Unit]
Description=Stream Overlay FastAPI (Uvicorn)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/stream-overlay
EnvironmentFile=/opt/stream-overlay/.env
ExecStart=/usr/bin/env uvicorn main:app --host 127.0.0.1 --port 13337
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
